<p>List of my academic publications and research.</p>

<p><strong>Total Publications:</strong> {{ publicationslist | length }}</p>

{% for year, pubs in publicationslist | groupby("data.year") | dictsort | reverse %}
  <h2>{{ year }}</h2>
  	
  <ul reversed class="postlist" style="--postlist-index: {{ (pubs | length) + 1 }}">    
    {% for pub in pubs | sort(false, false, "data.date") | reverse %}
	  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
        <a href="{{ pub.url }}">{{ pub.data.title }}</a>
      </li>
    {% endfor %}
  </ul>
{% endfor %}


