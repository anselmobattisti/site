					<li>						
						<a href="https://lattes.cnpq.br/6937214674204474" target="_blank" rel="noopener" aria-label="Lattes" title="Lattes">							
							<img src="{{ '/img/lattes-icon.png' | url }}" alt="Lattes" width="24" height="24" loading="lazy" decoding="async">
						</a>
					</li>
				</ul>
			</nav>
		</footer>

		<script type="text/javascript">
		(function() {
		  const btn = document.querySelector('.nav-toggle');
		  const nav = document.getElementById('site-nav');
		  if (!btn || !nav) return;
		  btn.addEventListener('click', function () {
		    const open = nav.classList.toggle('is-open');
		    btn.setAttribute('aria-expanded', open ? 'true' : 'false');
		  });
		})();
		</script>
	</body>
</html>
